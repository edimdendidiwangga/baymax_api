<% include ../partials/header %>
    <div class="section no-pad-bot" id="index-banner">
        <div class="container">
            <div class="section">
                <div class="row">
                    <div class="collection">

                    <form action="/sendEmail" method="post">
                      <input type="hidden" name="dataResult" value="<%= data %>">
                      <input type="hidden" name="name" value="<%= session.name %>">
                      <input type="hidden" name="email" value="<%= session.email %>">
                      <button class="btn waves-effect waves-light" type="submit" name="action">Send to Email
                        <i class="material-icons right">send</i>
                      </button>
                    </form>

                    </div>
                    <%  if(!data){ %>
                        <h3>The data searched does not exist :=( </h3>
                        <%  } else { %>
                                <ul class="collection with-header">
                                    <li class="collection-header">
                                        <h4><%= data.name.replace(/\w\S*/g, function(txt){return txt.charAt(0).toUpperCase() + txt.substr(1).toLowerCase();}) %></h4></li>
                                    <li class="collection-item">
                                        <%= data.description %>
                                    </li>

                                    <li class="collection-item">Solusi :
                                        <ul class="collection">
                                            <% let i=1; data.solutions.forEach(data=>{ %>
                                                <li class="collection-item">
                                                    <%= i++ %>.
                                                        <%= data %>
                                                </li>
                                                <% }) %>
                                        </ul>
                                    </li>
                                </ul>

                                <hr>

                                    <%  } %>
                </div>
            </div>
        </div>

        <% include ../partials/footer %>
