<% include ../partials_admin/header %>

    <div class="container">
        <div class="section">
            <div class="row">

              <form action="/admin/add_disease" method="post" class="col s12">
                <div class="row">
                  <div class="input-field col s6">
                    <input name="name" id="name" type="text" data-length="255">
                    <label for="name">Input disease name</label>
                  </div>
                </div>
                <div class="row">
                  <div class="input-field col s12">
                    <textarea name="description" id="description" class="materialize-textarea" data-length="1500"></textarea>
                    <label for="description">Input disease description</label>
                  </div>
                </div>
                <div class="row">
                  <div class="input-field col s12">
                    <textarea name="solution" id="solution" class="materialize-textarea" data-length="1500"></textarea>
                    <label for="solution">Input disease solution</label>
                  </div>
                </div>
                <button class="btn waves-effect waves-light" type="submit" name="action">Submit
                  <i class="material-icons right">send</i>
                </button>
              </form>
            </div>
        </div>
    </div>


