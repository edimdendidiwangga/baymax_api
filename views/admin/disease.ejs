<% include ../partials_admin/header %>

    <div class="container">
        <div class="section">
            <div class="row">
              <h2>Diseases List</h2>
              <a href='add_disease' class="waves-effect waves-light btn"><i class="material-icons left">assignment</i>ADD</a>
            <br>
              <!-- coding here -->
              <table class="striped">
                <thead>
                  <tr>
                      <th>Name</th>
                      <th>Descriptions</th>
                      <th>Solutions</th>
                      <th>Edit</th>
                      <th>Delete</th>
                  </tr>
                </thead>

                <tbody>
                  <% penyakit.forEach( list => { %>
                    <tr>
                      <td><%= list.name %></td>
                      <td><%= list.deskripsi.slice(0,40)+"..." %></td>
                      <td><%= list.solusi.slice(0,40)+"..." %></td>
                      <td><a href="edit_penyakit/<%= list.id %>" class="btn-flat blue"><i class="material-icons">edit</i></a></td>
                      <td><a id="delete" onclick="return confirm('Are you sure?')" class="btn-flat red" href="delete_penyakit/<%= list.id %>"><i class="material-icons">delete</i></a></td>
                    </tr>
                  <% }) %>
                </tbody>
              </table>
              </div>
        </div>
    </div>


<% include ../partials_admin/footer %>
